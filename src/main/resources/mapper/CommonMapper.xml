<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.company.app.mapper.CommonMapper">
    <!--根据列名搜索表-->
    <select id="selectTableWithColumnsName" resultType="java.util.Map">
        SELECT
        <foreach collection="queryColumns" item="item" open="" separator="," close="">${item}</foreach>
        FROM ${tableName} LIMIT ${pageNumber},${pageSize}
    </select>
</mapper>